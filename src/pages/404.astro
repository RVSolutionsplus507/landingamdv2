---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import AnimatedCTAButton from '../components/AnimatedCTAButton.astro';
---

<Layout title="Página no encontrada - Almacenajes Mini Depósitos">
	<Navbar />
	<main class="min-h-screen bg-gradient-to-br from-gray-50 to-orange-50 flex items-center justify-center px-4">
		<div class="max-w-4xl mx-auto text-center">
			<!-- Número 404 con estilo -->
			<div class="mb-8">
				<h1 class="text-[12rem] md:text-[16rem] font-black text-transparent bg-gradient-to-r from-[var(--color-primary)] to-orange-400 bg-clip-text leading-none select-none">
					404
				</h1>
				<div class="relative -mt-8">
					<div class="absolute inset-0 bg-gradient-to-r from-[var(--color-primary)] to-orange-400 opacity-20 blur-3xl"></div>
				</div>
			</div>

			<!-- Contenido principal -->
			<div class="space-y-6 mb-12">
				<h2 class="text-3xl md:text-4xl font-bold text-[var(--color-dark)] leading-tight">
					¡Oops! Esta página se perdió
				</h2>
				<p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
					Parece que la página que buscas no existe o fue movida. Pero no te preocupes, 
					tenemos muchas soluciones de almacenamiento esperándote.
				</p>
			</div>

			<!-- Ilustración con iconos -->
			<div class="mb-12 flex justify-center items-center space-x-8">
				<div class="relative">
					<!-- Icono de depósito -->
					<div class="w-20 h-20 bg-white rounded-2xl shadow-lg flex items-center justify-center border-2 border-orange-100 transform rotate-12 hover:rotate-0 transition-transform duration-300">
						<svg class="w-10 h-10 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
						</svg>
					</div>
				</div>
				
				<div class="text-6xl text-gray-300 animate-bounce">
					?
				</div>
				
				<div class="relative">
					<!-- Icono de ubicación -->
					<div class="w-20 h-20 bg-white rounded-2xl shadow-lg flex items-center justify-center border-2 border-orange-100 transform -rotate-12 hover:rotate-0 transition-transform duration-300">
						<svg class="w-10 h-10 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
						</svg>
					</div>
				</div>
			</div>

			<!-- Botones de acción -->
			<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
				<AnimatedCTAButton 
					href="/"
					text="Volver al inicio"
					className="w-full sm:w-auto"
				/>
				
				<a 
					href="/#sucursales" 
					class="inline-flex items-center px-6 py-3 border-2 border-[var(--color-primary)] text-[var(--color-primary)] font-semibold rounded-xl hover:bg-[var(--color-primary)] hover:text-white transition-all duration-300 group w-full sm:w-auto justify-center"
				>
					<svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
					</svg>
					Ver sucursales
				</a>
			</div>

			<!-- Enlaces útiles -->
			<div class="mt-16 pt-8 border-t border-gray-200">
				<p class="text-gray-500 mb-4 font-medium">Enlaces útiles:</p>
				<div class="flex flex-wrap justify-center gap-6 text-sm">
					<a href="/#servicios" class="text-[var(--color-primary)] hover:text-orange-600 transition-colors duration-300 font-medium">
						Nuestros servicios
					</a>
					<a href="/#tamanos" class="text-[var(--color-primary)] hover:text-orange-600 transition-colors duration-300 font-medium">
						Tamaños disponibles
					</a>
					<a href="/#cotizacion" class="text-[var(--color-primary)] hover:text-orange-600 transition-colors duration-300 font-medium">
						Obtener cotización
					</a>
					<a href="/#recomendaciones" class="text-[var(--color-primary)] hover:text-orange-600 transition-colors duration-300 font-medium">
						Recomendaciones
					</a>
				</div>
			</div>
		</div>
	</main>
	<Footer />
</Layout>

<style>
	/* Animación sutil para el número 404 */
	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-10px);
		}
	}
	
	h1 {
		animation: float 6s ease-in-out infinite;
	}
	
	/* Efecto de resplandor en hover para los iconos */
	.w-20:hover {
		box-shadow: 0 10px 25px rgba(239, 123, 52, 0.3);
	}
</style>
