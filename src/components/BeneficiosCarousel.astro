---
// Carousel de beneficios para la subsección 2 de servicios
---

<div class="relative">
  <!-- Carousel Container -->
  <div class="carousel-container bg-gray-100 rounded-2xl overflow-hidden h-96 flex items-center justify-center">
    <img id="benefits-image" 
      src="/Images/carousel1.webp" 
      alt="Beneficios carousel" 
      class="w-full h-full object-cover transition-all duration-500 ease-in-out"
    / loading="lazy">
  </div>
  
  <!-- Navigation Buttons -->
  <div class="flex justify-center mt-6 space-x-4">
    <button 
      id="benefits-prev-btn" 
      class="benefits-btn w-12 h-12 bg-[var(--color-primary)] rounded-full flex items-center justify-center border-2 border-transparent hover:bg-white hover:border-[var(--color-primary)] transition-all duration-300"
      aria-label="Imagen anterior del carousel de beneficios"
    >
      <svg class="w-6 h-6 text-white hover-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </button>
    
    <button 
      id="benefits-next-btn" 
      class="benefits-btn w-12 h-12 bg-[var(--color-primary)] rounded-full flex items-center justify-center border-2 border-transparent hover:bg-white hover:border-[var(--color-primary)] transition-all duration-300"
      aria-label="Siguiente imagen del carousel de beneficios"
    >
      <svg class="w-6 h-6 text-white hover-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </button>
  </div>
</div>

<style>
  /* Efectos de botones del carousel de beneficios */
  .benefits-btn {
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .benefits-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 20px rgba(239, 123, 52, 0.4);
  }
  
  .benefits-btn:hover .hover-arrow {
    color: #222222;
  }
  
  .benefits-btn:active {
    transform: scale(0.95);
  }
</style>

<script>
  // Datos de las imágenes del carousel de beneficios
  const benefitsImages = [
    '/Images/carousel1.webp',
    '/Images/carousel2.webp',
    '/Images/carousel3.webp',
    '/Images/carousel4.webp'
  ];
  
  let currentBenefitsIndex = 0;
  
  // Elementos del DOM
  const benefitsImage = document.getElementById('benefits-image') as HTMLImageElement;
  const benefitsPrevBtn = document.getElementById('benefits-prev-btn') as HTMLButtonElement;
  const benefitsNextBtn = document.getElementById('benefits-next-btn') as HTMLButtonElement;
  
  // Función para actualizar la imagen
  function updateBenefitsImage(newIndex: number) {
    if (benefitsImage) {
      benefitsImage.style.opacity = '0';
      setTimeout(() => {
        benefitsImage.src = benefitsImages[newIndex];
        benefitsImage.style.opacity = '1';
      }, 250);
    }
    currentBenefitsIndex = newIndex;
  }
  
  // Event listeners
  if (benefitsPrevBtn) {
    benefitsPrevBtn.addEventListener('click', () => {
      const newIndex = (currentBenefitsIndex - 1 + benefitsImages.length) % benefitsImages.length;
      updateBenefitsImage(newIndex);
    });
  }
  
  if (benefitsNextBtn) {
    benefitsNextBtn.addEventListener('click', () => {
      const newIndex = (currentBenefitsIndex + 1) % benefitsImages.length;
      updateBenefitsImage(newIndex);
    });
  }
</script>

<style>
  .carousel-container {
    min-height: 384px;
  }
  
  /* Cuando se agreguen las imágenes reales, se puede activar la funcionalidad */
  @media (max-width: 768px) {
    .carousel-container {
      min-height: 280px;
    }
  }
</style>

<script>
  // Funcionalidad del carousel se agregará cuando estén las imágenes
  // Por ahora es solo visual
</script>
