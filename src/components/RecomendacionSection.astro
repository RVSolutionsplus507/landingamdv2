<script>
  document.addEventListener('DOMContentLoaded', function() {
    (window as any).toggleAccordion = function(accordionId: string) {
      const content = document.getElementById(accordionId);
      const button = content?.previousElementSibling;
      const icon = button?.querySelector('.accordion-icon');
      
      if (content && button && icon) {
        const isHidden = content.classList.contains('hidden');
        
        // Determinar si es un acordeón principal o sub-acordeón
        const isMainAccordion = accordionId.startsWith('accordion-');
        const isSubAccordion = accordionId.startsWith('sub-accordion-');
        
        if (isMainAccordion) {
          // Para acordeones principales, cerrar solo otros acordeones principales
          document.querySelectorAll('[id^="accordion-"].accordion-content').forEach(el => {
            if (el !== content && el.id.startsWith('accordion-')) {
              el.classList.add('hidden');
              const otherButton = el.previousElementSibling;
              const otherIcon = otherButton?.querySelector('.accordion-icon');
              if (otherIcon && otherIcon instanceof HTMLElement) {
                otherIcon.style.transform = 'rotate(0deg)';
              }
            }
          });
        } else if (isSubAccordion) {
          // Para sub-acordeones, cerrar solo otros sub-acordeones del mismo grupo
          const parentAccordion = content.closest('[id^="accordion-"]');
          if (parentAccordion) {
            parentAccordion.querySelectorAll('[id^="sub-accordion-"].accordion-content').forEach(el => {
              if (el !== content) {
                el.classList.add('hidden');
                const otherButton = el.previousElementSibling;
                const otherIcon = otherButton?.querySelector('.accordion-icon');
                if (otherIcon && otherIcon instanceof HTMLElement) {
                  otherIcon.style.transform = 'rotate(0deg)';
                }
              }
            });
          }
        }
        
        // Alternar el acordeón actual
        if (isHidden) {
          content.classList.remove('hidden');
          if (icon instanceof HTMLElement) {
            icon.style.transform = 'rotate(180deg)';
          }
        } else {
